# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# Auth
BETTER_AUTH_SECRET=your-secret-key-min-32-chars-long-here
BETTER_AUTH_URL=http://localhost:3001

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Passkey / WebAuthn (optional)
PASSKEY_RP_ID=localhost
PASSKEY_RP_NAME=My App

# URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# Email
EMAIL_PROVIDER=resend
RESEND_API_KEY=
EMAIL_FROM=noreply@example.com

# SMTP (for nodemailer fallback)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# Twilio (SMS + WhatsApp)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_SMS_FROM=
TWILIO_WHATSAPP_FROM=

# Telegram
TELEGRAM_BOT_TOKEN=

# Notification Queue
QUEUE_ENABLED=false
QUEUE_CONCURRENCY=10
QUEUE_MAX_RETRIES=3

# Authorization Cache
CACHE_PROVIDER=memory  # Options: memory, redis
CACHE_TTL=300  # Cache TTL in seconds (default: 5 minutes)
CACHE_MAX_SIZE=1000  # Max items in memory cache (only used when CACHE_PROVIDER=memory)

# Redis Configuration (only required when CACHE_PROVIDER=redis)
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=authz:

# Rate Limiting (DDoS Protection) - Tier-Based
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW="1 hour"  # Time window (supports: "1 second", "1 minute", "1 hour", etc.)

# Tier-based limits (requests per hour as documented in docs/api-guide/03-security/03-rate-limiting.md)
RATE_LIMIT_FREE=100          # Free tier: 100 requests/hour
RATE_LIMIT_BASIC=1000        # Basic tier: 1,000 requests/hour
RATE_LIMIT_PRO=10000         # Pro tier: 10,000 requests/hour
RATE_LIMIT_ENTERPRISE=100000 # Enterprise tier: 100,000 requests/hour

# Idempotency (docs/api-guide/06-quality/02-idempotency.md)
IDEMPOTENCY_ENABLED=true     # Enable idempotency for POST/PATCH requests
IDEMPOTENCY_TTL=86400        # Cache TTL in seconds (default: 24 hours)

# Storage Provider (for file uploads)
STORAGE_PROVIDER=local       # Options: local, s3
STORAGE_LOCAL_PATH=./uploads # For local provider (dev only)

# S3/R2 Configuration (only required when STORAGE_PROVIDER=s3)
S3_ENDPOINT=                 # Optional: Custom endpoint for S3-compatible storage (R2, MinIO)
S3_REGION=us-east-1
S3_BUCKET=my-bucket
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# File Upload Limits
FILE_MAX_SIZE=52428800       # Maximum file size in bytes (default: 50 MB)
