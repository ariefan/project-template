{
  "name": "@workspace/db",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "auth:generate": "cross-env BETTER_AUTH_URL=http://localhost:3001 pnpm dlx @better-auth/cli generate --config ../auth/src/index.ts --output ./src/schema/auth.ts -y",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "biome lint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "@workspace/typescript-config": "workspace:*",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  },
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts"
  }
}
