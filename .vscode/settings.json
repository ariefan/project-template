{
  // ============================================================================
  // TAILWIND & FORMATTING
  // ============================================================================
  "tailwindCSS.experimental.configFile": "packages/ui/src/styles/globals.css",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ============================================================================
  // BIOME FORMATTING (per file type)
  // ============================================================================
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[graphql]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // AI-FRIENDLY: Disable auto-fix on save to prevent linter issues during AI coding
  // This prevents "unused import" removal during incremental AI edits
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "never",
    "source.organizeImports.biome": "never"
  },

  // TypeScript
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Editor
  "emmet.showExpandedAbbreviation": "never"
}
